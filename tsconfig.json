{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2015.promise",
      "es5",
      "es6",
      "es2017.object",
      "DOM",
      "ES2020.String",
      "es2019"
    ],
    "target": "ES2015",
    "rootDir": ".",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": "/Users/rpatel/Development/Personal/ts-metadata-build/lib/tsc",
    "paths": {
      "@package-a/*": ["packages/package-a/*"],
      "@package-b/*": ["packages/package-b/*"]
    }
  },
  "parcelTsPluginOptions": {
    "transpileOnly": false
  },
  "exclude": ["dist", "node_modules/*"]
}
