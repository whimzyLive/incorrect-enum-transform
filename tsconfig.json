{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "es2015.promise",
      "es5",
      "es6",
      "es2017.object",
      "DOM",
      "ES2020.String",
      "es2019"
    ],
    "target": "ESNext",
    "rootDir": ".",
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": ".",
  },
  "parcelTsPluginOptions": {
    "transpileOnly": false
  },
  "exclude": ["dist", "node_modules/*"]
}
